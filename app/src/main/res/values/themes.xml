<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TesteSicredi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_20</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/gray_20</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_20</item>
        <item name="android:background">@color/white</item>

        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonRefresh" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/montserrat_700</item>
        <item name="android:background">@color/black</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonDetails" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="ButtonShowMoreOrLess" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/blue</item>
        <item name="fontFamily">@font/montserrat_400</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ButtonGoBack">
        <item name="tint">@color/black</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/montserrat_500</item>
    </style>

    <style name="TextBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="hintTextColor">@color/black</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="TextInput">
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="ErrorDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="SideBar">
        <item name="android:background">@drawable/side_bar_rview_event_light</item>
    </style>

    <style name="ContainerElevation">
        <item name="android:background">@drawable/elevation_light</item>
    </style>

    <style name="ContainerDescription">
        <item name="android:background">@drawable/text_background_gradient_light</item>
    </style>
</resources>